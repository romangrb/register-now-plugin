.e-rn-rsvp {
	padding: 20px 0;
}

.e-rn-tickets-meta-row {
	display: none;
}

.e-rn-tickets-has-rsvp .e-rn-tickets-meta-row {
	display: table-row;
}

.e-rn-tickets-attendee {
	padding: 10px;
}

.e-rn-events-tickets td {
	padding: 8px 10px;
}

.e-rn-events-style-full .e-rn-events-tickets .e-rn-tickets-attendee,
.e-rn-events-tickets .e-rn-tickets-attendee {
	table,
	tr,
	td {
		border: 0;
	}
}

.e-rn-rsvp-message-display .e-rn-rsvp-messages {
	display: block;
}

.e-rn-rsvp-messages {
	display: none;
	padding: 10px 10px 5px;
}

.e-rn-rsvp-message {
	border-radius: 3px;
	border-style: solid;
	border-width: 1px;
	font-size: 12px;
	margin: 0 0 5px;
	padding: 0 .6em;
}

.e-rn-rsvp-message-success {
	background-color: #ffffe0;
	border-color: #e6db55;
}

.e-rn-rsvp-message-error {
	background-color: #ffebe8;
	border-color: #c00;
}

.e-rn-ticket-quantity {
	width: 100%;
}

.tickets-unavailable {
	font-style: italic;
}

.e-rn-rsvp-list {
	list-style: none;
	padding: 0;
	margin: 0;

	> .e-rn-item {
		padding: 20px;
		border: 1px solid #ededed;
		border-bottom: 0;

		&:last-child {
			border-bottom: 1px solid #ededed;
			margin-bottom: 20px;
		}

		&.e-rn-disabled {
			background-color: #efefef;
			border-color: #ddd;
			color: #717171;

			&:last-child {
				border-bottom-color: #ddd;
			}
		}

		.e-rn-answer {
			float: right;
			display: inline-block;
		}

		table {
			border: 0;
			margin: 0;
		}

		td {
			border: 0;
		}
	}
}

.list-attendee {
	color: #999;
	display: inline-block;
	letter-spacing: 1px;
	text-transform: uppercase;
}

.e-rn-link-tickets-message {
	text-align: center;
	padding: 20px;
	border: 1px solid #ededed;
}

.e-rn-submit-tickets-form {
	margin-top: 20px;
}

.user-details {
	margin: 0 0 1.5em 0;

	p {
		margin: 0 0 .5em 0;
	}
}

.e-rn-answer {
	line-height: 2;

	.type-label {
		padding-right: .5em;
	}
	label {
		display: block;
	}
	select {
		background: white;
		border: 1px solid #ddd;
	}
}

.e-rn-rsvp {
	h2 {
		margin-bottom: 20px;
		line-height: 1.2;
	}
}

.event-tickets-meta-label {
	font-weight:700;
	margin: 0 1em 0 0;
}

/* TwentySixteen fix for box shadow as bottom border on <a> link */

.e-rn-theme-twentysixteen,
.e-rn-theme-parent-twentysixteen {
	.entry-content a,
	.entry-summary a,
	.taxonomy-description a,
	.logged-in-as a,
	.comment-content a,
	.pingback .comment-body > a,
	.textwidget a,
	.entry-footer a:hover,
	.site-info a:hover {
		box-shadow: none;
	}
}