.rioc-addon {
	-webkit-box-sizing: border-box;
	   -moz-box-sizing: border-box;
	        box-sizing: border-box;
	display: inline-block;
	margin-right: 10px;
	overflow: hidden;
	padding: 20px 20px 20px 0;
	vertical-align: top;
	width: 300px;
}

.rioc-addon .thumb img {
	max-width: 100%;
	width: 100%;
}

.rioc-addon h4 {
	font-size: 1.17em;
}

.rioc-addon h4 a {
	text-decoration: none;
}

.addon-grid {
	width: 100%;
}

.category-title {
	clear: both;
	display: block;
	margin-bottom: 10px;
}

.rioc-addon.first {
	border-bottom: 1px solid #dfdfdf;
	margin: 20px 0 10px;
	overflow: hidden;
	padding: 0 0 20px 330px;
	width: 100%;
}

.rioc-addon.first h4 {
	font-size: 20px;
	line-height: 1.4;
	margin: 0;
}

.rioc-addon.first .thumb {
	float: left;
	margin-left: -330px;
	width: 300px;
}

.rioc-addon.first .description {
	max-width: 600px;
}
